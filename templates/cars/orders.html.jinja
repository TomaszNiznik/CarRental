{% extends 'base.html.jinja' %}

{% block title %}Moje zamówienia{% endblock %}

{% block content %}
<h2>Moje zamówienia</h2>
{% if orders %}
    <ul>
        {% for order in orders %}
            <li>Order ID: {{ order.id }} - Status: {{ order.status }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>Nie masz żadnych zamówień.</p>
{% endif %}
{% endblock %}
